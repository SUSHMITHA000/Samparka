<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3FFF4"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Greeting -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi User"
            android:textColor="#0EB858"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- GREEN TITLE BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#0EB858"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="horizontal">

            <!-- App Name -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samparka"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Notification Icon -->
            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_notifications"
                android:padding="4dp"
                android:tint="#FFFFFF"
                tools:ignore="UseAppTint" />
S
            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <!-- Main Profile Icon (top right) -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_green"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Small Header Profile Section -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/userProfileSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_green"
                android:padding="8dp" />

            <TextView
                android:id="@+id/userNameSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#111827"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Community, Your Voice"
            android:textColor="#0EB858"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/totalReports"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#30CF85"
                android:text="0\nTotal Reports"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/inProgressReports"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#30CF85"
                android:text="0\nIn Progress"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/resolvedReports"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#30CF85"
                android:text="0\nResolved"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Report New Issue -->
        <LinearLayout
            android:id="@+id/reportIssueSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#00A651"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Report New Issue"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>

        <!-- My Reports + Help Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnMyReports"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="My Reports"
                android:textColor="#0EB858"
                android:textSize="16sp"
                android:background="#F0FFF9"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnHelpChat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Help Chat"
                android:textColor="#0EB858"
                android:textSize="16sp"
                android:background="#F0FFF9"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Community Update -->
        <TextView
            android:id="@+id/communityUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Update\nNew Panchayat meeting announcement soon"
            android:textSize="16sp"
            android:textColor="#2C3E50"
            android:background="#EAF5FF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
