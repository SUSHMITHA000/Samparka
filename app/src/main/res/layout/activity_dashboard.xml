<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hi sushhh ðŸ‘‹"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_notifications"
                android:layout_marginEnd="16dp"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_primary_color"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_card_background"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/totalReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Reports"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dashboard_card_background"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/inProgressReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Progress"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_card_background"
                android:elevation="2dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/resolvedReports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resolved"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Main Grid -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false">

            <!-- Report New Issue -->
            <LinearLayout
                android:id="@+id/reportIssueSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_card_yellow"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_report"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report New Issue"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit a new report"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- My Reports -->
            <LinearLayout
                android:id="@+id/btnMyReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_card_blue"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mail"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Reports"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all your submitted reports"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Community Update -->
            <LinearLayout
                android:id="@+id/communityUpdateSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_card_green"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Update"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latest news and updates"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Help and Chat -->
            <LinearLayout
                android:id="@+id/btnHelpChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:background="@drawable/bg_card_orange"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_help"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help and Chat"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get instant support and help"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Events -->
            <LinearLayout
                android:id="@+id/btnEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:padding="16dp"
                android:background="@drawable/button_primary_background"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check upcoming events"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</ScrollView>
