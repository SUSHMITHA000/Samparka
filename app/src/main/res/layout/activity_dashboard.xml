<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3FFF4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0EB858"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samparka"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Community, Your Voice"
                android:textColor="#FFFFFF"
                android:textSize="16sp"/>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#30CF85"
                    android:text="3\nTotal Reports"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#30CF85"
                    android:text="1\nIn Progress"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#30CF85"
                    android:text="1\nResolved"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Report New Issue Button -->
        <Button
            android:id="@+id/btnReportIssue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Report New Issue"
            android:background="#30CF85"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- My Reports & Help/Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnMyReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Reports"
                android:background="#F0FFF9"
                android:textColor="#0EB858"
                android:textSize="16sp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnHelpChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help &amp;Chat"
                android:background="#F0FFF9"
                android:textColor="#0EB858"
                android:textSize="16sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Community Update -->
        <TextView
            android:id="@+id/communityUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAF5FF"
            android:text="Community Update\nPanchayat meeting scheduled for April 20th at 3 PM"
            android:textColor="#2C3E50"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

