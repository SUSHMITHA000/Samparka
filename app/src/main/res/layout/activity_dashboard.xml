<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/greeting"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF"
                android:contentDescription="@string/notification_icon_description"
                tools:ignore="UseAppTint" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <!-- Main Profile Icon (top right) -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_primary_color"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:contentDescription="@string/profile_icon_description"
                android:src="@drawable/ic_profile" />

        </LinearLayout>

        <!-- Report New Issue -->
        <LinearLayout
            android:id="@+id/reportIssueSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary_background"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_new_issue"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalReports"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_card_background"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/total_reports"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/inProgressReports"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_card_background"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/in_progress_reports"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/resolvedReports"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_card_background"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/resolved_reports"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

        </LinearLayout>


        <!-- My Reports + Help Chat -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnMyReports"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary_background"
                android:text="@string/my_reports"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHelpChat"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_primary_background"
                android:text="@string/help_chat"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Community Update -->
        <TextView
            android:id="@+id/communityUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/dashboard_card_background"
            android:padding="16dp"
            android:text="@string/community_update_text"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
