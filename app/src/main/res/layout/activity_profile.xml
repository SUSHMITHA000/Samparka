<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#16A34A"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile &amp; Settings"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_green"
                    android:padding="32dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/changePhotoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Photo"
                    android:textColor="#16A34A"
                    android:background="@drawable/white_rounded_button"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Personal Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:layout_marginTop="16dp">

                <!-- Full Name -->
                <TextView
                    android:layout_width="341dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Personal Information"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/fullNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Ramesh Kumar"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="9876543210"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#111827"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/locationEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Gandhi Nagar, Ward 3"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <!-- App Settings Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:elevation="4dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Settings"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Language Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- Language Dropdown -->
                <Spinner
                    android:id="@+id/language_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:entries="@array/languages"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:spinnerMode="dropdown"
                    android:popupBackground="#FFFFFF" />
            </LinearLayout>

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#16A34A"
                android:text="Save Changes"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Help & Feedback Button -->
            <Button
                android:id="@+id/helpButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#E5E7EB"
                android:text="Help &amp; Feedback"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#FFEFF0"
                android:text="Logout"
                android:textColor="#E53935"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
