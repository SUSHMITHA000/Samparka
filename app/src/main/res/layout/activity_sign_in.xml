<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginTop="40dp"
            android:contentDescription="Logo" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome "
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#1C1C1C"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to report and track issues"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnLoginTab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Login"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="#999" />

            <Button
                android:id="@+id/btnSignUpTab"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Sign Up Form -->
        <LinearLayout
            android:id="@+id/layoutSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register to start reporting issues"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:padding="12dp"
                android:background="@drawable/input_box"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:padding="12dp"
                android:background="@drawable/input_box"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnCreateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#24A148"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <!-- Login Form (Hidden Initially) -->
        <LinearLayout
            android:id="@+id/layoutLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/rounded_card"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email or Phone"
                android:drawableStart="@android:drawable/ic_menu_send"
                android:padding="12dp"
                android:background="@drawable/input_box"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableStart="@android:drawable/ic_lock_idle_lock"
                android:padding="12dp"
                android:background="@drawable/input_box"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#24A148"
                android:padding="12dp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
