<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- TOP BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="#000"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- STATUS -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="In Progress"
            android:textStyle="bold"
            android:textColor="#0EB858"
            android:textSize="16sp"
            android:gravity="center"/>

        <!-- MAIN IMAGE -->
        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_placeholder"
            android:background="@drawable/rounded_img" />

        <!-- DETAILS CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_white"
            android:padding="16dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pothole on Main Road"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#6A6D74"
                android:layout_marginTop="4dp"/>

            <!-- LOCATION -->
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="#111827" />

            <!-- DATE -->
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-04-10"
                android:layout_marginTop="4dp"
                android:textColor="#6A6D74"/>

            <!-- ASSIGNED TO -->
            <TextView
                android:id="@+id/txtAssigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Authority"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="#111827" />

            <!-- PRIORITY BOX -->
            <TextView
                android:id="@+id/txtPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/priority_box"
                android:text="High"
                android:padding="8dp"
                android:textColor="#0EB858"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <!-- STATUS TIMELINE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Timeline"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827" />

            <!-- ITEM 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/timeline_dot" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:background="#26CF85" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/timeline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complaint Submitted"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/timeline1Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-04-10"
                        android:textSize="14sp"
                        android:textColor="#6A6D74" />
                </LinearLayout>
            </LinearLayout>

            <!-- ITEM 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/timeline_dot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/timeline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assigned to Road Authority"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/timeline2Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-04-10"
                        android:textSize="14sp"
                        android:textColor="#6A6D74" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- SEND UPDATE REQUEST -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_white1"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Update Request"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:layout_marginBottom="10dp" />

            <!-- Message Input Box -->
            <EditText
                android:id="@+id/etMessageToAuthority"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Type your message to the authority..."
                android:background="@drawable/edittext_box"
                android:gravity="top|start"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <!-- Send Message Button -->
            <Button
                android:id="@+id/btnSendMessage"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Send Message"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00A651"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>



    </LinearLayout>

</ScrollView>
