<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FA">

    <!-- Header -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AB151"
        android:padding="18dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Assistant"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available 24/7"
            android:textColor="#fff"
            android:textSize="14sp"
            android:paddingTop="4dp"/>
    </LinearLayout>

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="start">

        <Button
            android:id="@+id/btnReportIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Issue"
            android:background="@drawable/tab_selected_bg"
            android:textColor="#1AB151"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnTrackComplaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Complaint"
            android:background="@drawable/tab_unselected_bg"
            android:textColor="#1AB151"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/btnContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:background="@drawable/tab_unselected_bg"
            android:textColor="#1AB151"/>
    </LinearLayout>

    <!-- Chat area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/chatContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <!-- Message input row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#fff"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:hint="Type your message..."
            android:background="@drawable/edittext_bg"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/rounded_button_bg"
            android:tint="#fff"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
