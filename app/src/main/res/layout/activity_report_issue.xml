<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".report_issue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#00A651"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="#FFFFFF"
                android:contentDescription="Back"
                tools:ignore="HardcodedText,UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Issue"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Upload Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:background="@drawable/card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo/Video *"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/uploadSection"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/dotted_box">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#999999"
                    android:contentDescription="Upload image"
                    android:scaleType="centerCrop"
                    tools:ignore="HardcodedText,UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to upload photo"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-detected: Main Road, Ward 3"
                android:textColor="#00A651"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:background="#E8F5E9"
                android:padding="10dp"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                tools:ignore="HardcodedText,UseCompatTextViewDrawableXml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location auto-detected via GPS"
                android:textColor="#777777"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Issue Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Type *"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/spinnerIssueType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />


        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe the issue in detail..."
                android:gravity="top|start"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <Button
                android:id="@+id/btnVoice"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Add Voice Description"
                android:textColor="#00A651"
                android:background="@android:color/white"
                android:drawableStart="@android:drawable/ic_btn_speak_now"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Submit -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Submit Complaint"
            android:backgroundTint="#00A651"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
