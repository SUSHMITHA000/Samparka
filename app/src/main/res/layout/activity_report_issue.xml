<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:fillViewport="true"
    tools:context=".report_issue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Middle Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report New Issue"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- UPLOAD PHOTO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/dashboard_card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo/Video *"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- PREVIEW BOX -->
            <LinearLayout
                android:id="@+id/previewContainer"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:background="@drawable/dotted_box"
                android:orientation="vertical">

                <!-- IMAGE PREVIEW (FULL IMAGE, NO ZOOM) -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:background="#00000000" />

                <!-- TEXT WHEN NO IMAGE -->
                <TextView
                    android:id="@+id/tapToUploadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No image selected"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>


            <!-- UPLOAD BUTTON -->
            <Button
                android:id="@+id/btnUploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Upload Photo"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_background"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- LOCATION SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dashboard_card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-detected: ..."
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="8dp"
                android:background="#E3F2FD"
                android:padding="10dp"
                android:drawableStart="@android:drawable/ic_menu_mylocation" />
        </LinearLayout>

        <!-- ISSUE TYPE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/dashboard_card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Type *"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerIssueType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background_pastel" />
        </LinearLayout>

        <!-- DESCRIPTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/dashboard_card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe the issue..."
                android:gravity="top|start"
                android:background="@drawable/edit_text_background_pastel"
                android:padding="10dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- SUBMIT BUTTON -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Submit Complaint"
            android:background="@drawable/button_primary_background"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
