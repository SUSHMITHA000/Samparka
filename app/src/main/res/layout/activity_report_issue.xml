<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".report_issue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TOP USER PROFILE BAR (Name + Photo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/userProfileSmall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_green"
                android:padding="6dp" />

            <TextView
                android:id="@+id/userNameSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- TITLE BAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#00A651"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="#FFFFFF"
                tools:ignore="UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Issue"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="16dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- PROFILE ICON IN HEADER -->
            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_green"
                android:padding="5dp" />
        </LinearLayout>

        <!-- UPLOAD PHOTO SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Photo/Video *"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- PREVIEW BOX -->
            <LinearLayout
                android:id="@+id/previewContainer"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:background="@drawable/dotted_box"
                android:orientation="vertical">

                <!-- IMAGE PREVIEW (FULL IMAGE, NO ZOOM) -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:background="#00000000" />

                <!-- TEXT WHEN NO IMAGE -->
                <TextView
                    android:id="@+id/tapToUploadText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No image selected"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>


            <!-- UPLOAD BUTTON -->
            <Button
                android:id="@+id/btnUploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Upload Photo"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#00A651"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- LOCATION SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-detected: ..."
                android:textColor="#00A651"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:background="#E8F5E9"
                android:padding="10dp"
                android:drawableStart="@android:drawable/ic_menu_mylocation" />
        </LinearLayout>

        <!-- ISSUE TYPE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Type *"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerIssueType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_bg" />
        </LinearLayout>

        <!-- DESCRIPTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description *"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Describe the issue..."
                android:gravity="top|start"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- SUBMIT BUTTON -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Submit Complaint"
            android:backgroundTint="#00A651"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
